---
import Hero from '../components/Hero.astro';
import Layout from '../layouts/Layout.astro';
import BaseContainer from '../containers/BaseContainer.astro';
import getAllUsers from '../api/users';
import Card from '../components/TestimonyCard.astro';
const data = await getAllUsers();
const users = data?.users;
---

<Layout title="PAGE #2 " description='pagina demo'>
	<Hero title='Conviértete en un Full Stack Developer' 
	subTitle='' 
	description='Un programa intensivo en línea que simula un entorno de trabajo real y te prepara para una carrera exitosa como desarrollador Full Stack.'/>
	<BaseContainer title='Testimonios'>
	{users?.map(user => <Card user={user} />)}
	</BaseContainer>
</Layout>

<style>
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
