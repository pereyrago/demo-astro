---
import Hero from '../components/Hero.astro';
import Layout from '../layouts/Layout.astro';
import Section from '../containers/BaseContainer.astro';
import getAllUsers from '../api/users';
import Card from '../components/TestimonyCard.astro';
import Timer from '../components/Timer';
const data = await getAllUsers();
const users = data?.users;
---

<Layout title="PAGE #1 " description='pagina demo'>
	<Hero />
	<Section title='Testimonios'>
		{users?.map(user => <Card user={user} />)}
	</Section>
	<Section title="TIMER">
		<span>JS se corri√≥ por <Timer client:visible /> segundos</span>
		
	</Section>
</Layout>

<style>
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	span {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 5em;
	}
</style>
