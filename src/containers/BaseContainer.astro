---
import Card from "../components/TestimonyCard.astro";
import getAllUsers from "../api/users";


const {title= 'Testimonios'} = Astro.props
---
<section>
    <h2>{title}</h2>
    <div>
        <slot/>
    </div>
</section>
<style>

    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: fit-content;
    }
    section div {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        gap: 2rem;
    }
    h2 {
        padding: 2rem 0;
        font-size: 3rem;
        font-weight: 700;
        margin: 0;
        text-align: center;
    }

</style>